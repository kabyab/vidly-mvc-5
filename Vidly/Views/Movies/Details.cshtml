@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details of: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate</li>
    <li>Added to Database on: @Model.DateAdded</li>
    <li>Number of copies in stock: @Model.NumInStock</li>
</ul>

